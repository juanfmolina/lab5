/*
definicion de la estructura cuenta y la implementacion de sus metodos
*/



#include <stdlib.h> 
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>
#include<math.h> 
 
struct Cuenta{

	char idCuenta;
	int saldo;

};

void consignar(char aCuentas[],char identCuenta, int monto);
void retirar(char aCuentas[],char identCuenta, int monto);
void transferir(char aCuentas[],char identCuenta, int monto);
void crearCuentas(int numeroCuentas, int valorInicial);


int main(int argc, char *argv[]){

	struct Cuenta aCuentas[atoi(argv[3])];
	srand(time(NULL)); 
	int i=0;
	for(i=0;i<argv[3];i++){
		aCuentas[i].idCuenta= (rand() % 13) + 1; 

	}

	int numeroDeHilos = argv[1];
	int tiempoEjecucion = argv[2];
	int numeroCuentas = argv[3];
	int valorInicial = argv[4];

	
	

}
void consignar(struct Cuenta aCuentas[],char identCuenta, int monto){
	
	int i =0;	
	int b=0;
	while(b==0){
	
		if(aCuentas[i].idCuenta == identCuenta){

			aCuentas[i].saldo = aCuenta[i].saldo + monto;
			break;
		}
		i++;
	}

}

void retirar(struct Cuenta aCuentas[],char identCuenta, int monto){
	
	int i =0;
	int b=0;
	while(b==0){
	
		if(aCuentas[i].idCuenta == identCuenta){

			aCuentas[i].saldo = aCuentas[i].saldo - monto;
			break;
		}
		i++;
	}

}

void tansferir(struct Cuenta aCuentas[],char identCuenta, int monto){
	
	int i =0;
	int b=0;
	while(b==0){
	
		if(aCuentas[i].idCuenta == identCuenta){

			aCuentas[i].saldo = aCuentas[i].saldo + monto;
			break;
		}
		i++;
	}

}

void * crearCuentas(int cuentas, int valor){
	int i=0;
	struct Cuenta cuentas[cuentas];
	for(i=0; i<cuentas; i++){
			
		cuentas[i].saldo = valor;
	
	}
	
}
